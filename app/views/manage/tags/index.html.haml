%h1 Listing tags

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Organization
      %th Approved
      %th
      %th
      %th

  %tbody
    - @tags.each do |tag|
      %tr
        %td= tag.name
        %td= tag.description
        %td= tag.organization
        %td= tag.approved
        %td= link_to 'Show', manage_tag_path(tag)
        %td= link_to 'Destroy', manage_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Tag', new_manage_tag_path
