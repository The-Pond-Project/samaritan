!!!
%html{lang: 'en'}
  %head
    / Global site tag (gtag.js) - Google Analytics
    %script{:async => "", :src => "https://www.googletagmanager.com/gtag/js?id=G-ETPT0D8XBV"}
    :javascript
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-ETPT0D8XBV');

    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}/
    %title ThePondProject
    %meta{content: "width=device-width,initial-scale=1", name: "viewport"}/
    %meta{name: "theme-color", content: "#8e2731"}
    %link{rel: "manifest",  href: "/manifest.json" }
    %link#bootstrap-css{href: "//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css", rel: "stylesheet"}/
    %link{rel: "stylesheet", href: "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" }
    %link{href: "https://fonts.googleapis.com/icon?family=Material+Icons", rel: "stylesheet"}
    %link{rel:"stylesheet", href:"https://cdn.jsdelivr.net/npm/charts.css/dist/charts.min.css"}
    %link{rel:"stylesheet", href:"https://unpkg.com/aos@next/dist/aos.css"}
    %script{src: "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"}
    %script{crossorigin: "anonymous", integrity: "sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB", src: "https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"}
    %script{crossorigin: "anonymous", integrity: "sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13", src: "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"}
    %script{src: "//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"}
    = tag :meta, name: 'stripe-public-key', content: EnvSecret.get('STRIPE_PUBLISHABLE_KEY')
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'https://js.stripe.com/v3/', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    - if current_user&.super_admin? || current_user&.admin?
      = render 'layouts/partials/manage_navbar'
    - else
      = render 'layouts/partials/navbar'
    = render 'layouts/partials/alerts'
    = yield

    = render 'layouts/partials/footer'
    %script{src: "https://unpkg.com/aos@next/dist/aos.js"}
    :javascript
      AOS.init({
        duration: 2100,
        once: true,
      });
