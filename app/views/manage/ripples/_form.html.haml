= form_for @ripple, url: manage_pond_ripple_path(@pond, @ripple) do |f|
  - if @ripple.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ripple.errors.count, "error")} prohibited this ripple from being saved:"
      %ul
        - @ripple.errors.full_messages.each do |message|
          %li= message

  .field
    = f.hidden_field :pond_id, value: @pond.id
  .field
    = f.label :postal_code
    = f.text_field :postal_code
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :region
    = f.text_field :region
  .field
    = f.label :county
    = f.text_field :county
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :vpn
    = f.text_field :vpn
  .field
    = f.label :precise_location
    = f.text_field :precise_location
  %p Select up to three tags for your act of kindness
  - @tags&.each do |tag| 
    %input{type: "checkbox", name: 'ripple[tags][]', value: tag.id}
    =tag.name
  .actions
    = f.submit 'Save'
