%h1 Listing tags

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Organization
      %th Approved
      %th
      %th
      %th

  %tbody
    - @tags.each do |tag|
      %tr
        %td= tag.name
        %td= tag.description
        %td= tag.organization.name
        - if tag.approved.present?
          %td= tag.approved
        - else
          %td pending
        %td= link_to 'Show', organization_tag_path(tag.organization, tag)

%br

= link_to 'New Tag', new_tag_path
