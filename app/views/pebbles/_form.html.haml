= form_for @pebble do |f|
  - if @pebble.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pebble.errors.count, "error")} prohibited this pebble from being saved:"
      %ul
        - @pebble.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :uuid
    = f.text_field :uuid
  .field
    = f.label :postal_code
    = f.text_field :postal_code
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :region
    = f.text_field :region
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :pebble_key
    = f.text_field :pebble_key
  .actions
    = f.submit 'Save'
