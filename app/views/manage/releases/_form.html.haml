= form_for @release, url: manage_organization_release_path(@organization, @release) do |f|
  - if @release.errors.any?
    #error_explanation
      %h2= "#{pluralize(@release.errors.count, "error")} prohibited this release from being saved:"
      %ul
        - @release.errors.full_messages.each do |message|
          %li= message

  .field
    = f.hidden_field :organization_id, value: @organization.id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description

  .actions
    = f.submit 'Save'
